<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/reportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="700"
            android:fontFamily="@font/dmsans_bold"
            android:text="시설물 신고"
            android:textFontWeight="900"
            android:textSize="24sp"
            android:textStyle="bold" />

<!--        <TextView-->
<!--            android:id="@+id/textView5"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="24dp"-->
<!--            android:fontFamily="@font/dmsans"-->
<!--            android:text="신고 일자"-->
<!--            android:textFontWeight="900" />-->

<!--        <EditText-->
<!--            android:id="@+id/reportDate"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="48dp"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:layout_marginBottom="8dp"-->
<!--            android:fontFamily="@font/dmsans"-->
<!--            android:textSize="12dp"-->
<!--            android:background="@drawable/edittext_custom" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/dmsans"
            android:textSize="12dp"
            android:text="캠퍼스명"
            android:textFontWeight="900" />

        <EditText
            android:id="@+id/campusName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_custom"
            android:fontFamily="@font/dmsans"
            android:textSize="12dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/dmsans"
            android:textSize="12dp"
            android:text="강의실명"
            android:textFontWeight="900" />

        <EditText
            android:id="@+id/classroomName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_custom"
            android:fontFamily="@font/dmsans"
            android:textSize="12dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="465px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="465px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/dmsans"
                    android:text="시설물 ID"
                    android:textSize="12dp"
                    android:textFontWeight="900" />
                <EditText
                    android:id="@+id/facilityId"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="@font/dmsans"
                    android:textSize="12dp"
                    android:background="@drawable/edittext_custom"
                    android:layout_weight="1"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="465px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/dmsans"
                    android:text="고장 유형"
                    android:textSize="12dp"
                    android:textFontWeight="900" />
                <EditText
                    android:id="@+id/faultType"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="@font/dmsans"
                    android:textSize="12dp"
                    android:background="@drawable/edittext_custom"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>


        <CheckBox
            android:id="@+id/isUserFacility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="본인이 사용한 시설물이 아닙니까?"
            android:textSize="12dp"
            android:textFontWeight="700"
            android:fontFamily="@font/dmsans"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/dmsans"
            android:text="상세 설명"
            android:textSize="12dp"
            android:textFontWeight="900" />
        <EditText
            android:id="@+id/additionalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_custom"
            android:minHeight="120dp"
            android:fontFamily="@font/dmsans"
            android:textSize="12dp"
            android:gravity="top"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reportButton"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#130160"
            android:text="신고하기"
            android:textColor="@android:color/white"
            app:cornerRadius="6dp" />
    </LinearLayout>
</ScrollView>
