<resources>
    <style name="Base.Theme.FixSkkuFront" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- BottomNavigationView custom style -->
    <style name="Widget.BottomNavigationView.Custom" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemRippleColor">@color/bottom_nav_item_selected_color</item>
    </style>

    <style name="CustomBottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/CustomBottomNavigationViewTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/CustomBottomNavigationViewTextStyle</item>
        <item name="itemIconSize">12dp</item>
    </style>

    <style name="CustomBottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/pretendard_variable</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.FixSkkuFront" parent="Base.Theme.FixSkkuFront"/>
</resources>
