<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_margin="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/itemImageView"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_home" />

        <TextView
            android:id="@+id/itemTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Item Title"
            android:textSize="16sp"
            android:textFontWeight="900"/>

        <TextView
            android:id="@+id/itemSubtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Item Subtitle"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:background="@drawable/tag_background"
                android:backgroundTint="#33C8C9D4"
                android:fontFamily="@font/dmsans_regular"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:text="27232"
                android:textColor="#524B6B"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:background="@drawable/tag_background"
                android:backgroundTint="#33C8C9D4"
                android:fontFamily="@font/dmsans_regular"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:text="A-32"
                android:textColor="#524B6B"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_background"
                android:backgroundTint="#33C8C9D4"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:text="의자 고장"
                android:textColor="#524B6B"
                android:textSize="10sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/recentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="#524B6B"
                android:layout_weight="1"
                android:text="25 minute ago"
                android:fontFamily="@font/dmsans"
                android:textSize="8sp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tag5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_background"
                android:backgroundTint="#33C8C9D4"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textColor="#524B6B"
                android:fontFamily="@font/dmsans"
                android:text="담당자 배정 대기중"
                android:textSize="10sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"                android:layout_marginEnd="4dp"/>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
